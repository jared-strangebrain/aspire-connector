{
  "name": "verify_connection",
  "title": "Verify Connection",
  "description": "Lightweight GET to /api/Contacts to verify Aspire credentials and API reachability.",
  "version": "1.0.0",
  "service": "aspire",
  "isTrigger": false,
  "tags": ["utility", "auth", "healthcheck"],
  "input": {
    "schema": {
      "type": "object",
      "properties": {
        "$top": {
          "type": "integer",
          "minimum": 1,
          "default": 1,
          "description": "Number of records to read from /api/Contacts."
        },
        "$select": {
          "type": "string",
          "description": "Comma-separated fields to return, e.g. 'Id,Name'."
        }
      },
      "additionalProperties": false
    }
  },
  "output": {
    "schema": {
      "type": "object",
      "additionalProperties": true
    }
  }
}